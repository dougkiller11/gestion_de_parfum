@model Gestion_de_parfum.Controllers.CheckoutSummary
@{
    ViewData["Title"] = "Commande confirmée";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Essence Luxe</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body { font-family:'Inter',sans-serif; background:#050505; color:white; margin:0; }
        .wrap { max-width: 960px; margin:0 auto; padding:40px 20px 60px; }
        .card { background: linear-gradient(180deg, rgba(12,12,12,0.92) 0%, rgba(6,6,6,0.95) 100%); border:1px solid rgba(212,175,55,0.22); border-radius:16px; padding:24px; box-shadow:0 18px 42px rgba(0,0,0,0.38); }
        h1 { color:#d4af37; margin:0 0 12px; font-size:30px; }
        .muted { color:rgba(255,255,255,0.7); margin-bottom:16px; }
        .pill { display:inline-block; padding:8px 12px; border-radius:999px; background:rgba(212,175,55,0.12); color:#d4af37; font-weight:700; font-size:13px; }
        table { width:100%; border-collapse:collapse; margin-top:18px; }
        th, td { padding:10px; border-bottom:1px solid rgba(212,175,55,0.15); text-align:left; font-size:14px; }
        th { color:#d4af37; }
        .total { text-align:right; font-weight:800; color:#d4af37; font-size:18px; margin-top:14px; }
        .btn { display:inline-block; margin-top:18px; padding:12px 16px; border-radius:10px; border:1px solid rgba(212,175,55,0.35); background:linear-gradient(135deg,#d4af37 0%,#b8860b 100%); color:#050505; font-weight:800; text-decoration:none; }
    </style>
</head>
<body>
    <div class="wrap">
        <div class="card">
            <h1>Votre achat est confirmé</h1>
            <div class="muted">Merci pour votre confiance.</div>
            <div class="pill">Facture : @Model.OrderId</div>

            <table>
                <thead>
                    <tr>
                        <th>Article</th>
                        <th>Qté</th>
                        <th>Taille</th>
                        <th>Prix</th>
                        <th>Sous-total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Nom</td>
                            <td>@item.Quantite</td>
                            <td>@item.Taille</td>
                            <td>@item.Prix.ToString("F2") €</td>
                            <td>@( (item.Prix * item.Quantite).ToString("F2") ) €</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="total">Total réglé : @Model.Total.ToString("F2") €</div>
            <div class="muted" style="margin-top:10px;">
                Payé avec : @Model.CardMasked<br />
                Numéro (partiel) : @Model.CardFirst4 **** **** @Model.CardLast4<br />
                Nom de la carte : @Model.CardName
            </div>

            <a class="btn" href="@Url.Action("Index","Boutique")">Continuer vos achats</a>
        </div>
    </div>
</body>
</html>

