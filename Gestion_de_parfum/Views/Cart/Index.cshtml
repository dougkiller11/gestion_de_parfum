@model List<Gestion_de_parfum.Controllers.CartItem>
@{
    ViewData["Title"] = "Mon Panier";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Essence Luxe</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; background:#050505; color:white; margin:0; }
        .wrap { max-width: 1200px; margin: 0 auto; padding: 40px 20px 60px; }
        .header { display:flex; justify-content:space-between; align-items:center; margin-bottom:24px; }
        h1 { font-size:32px; font-weight:800; margin:0; color:#d4af37; }
        .back { color:rgba(255,255,255,0.7); text-decoration:none; font-size:13px; }
        .card { background: linear-gradient(180deg, rgba(12,12,12,0.92) 0%, rgba(6,6,6,0.95) 100%); border:1px solid rgba(212,175,55,0.2); border-radius:14px; padding:20px; box-shadow:0 12px 30px rgba(0,0,0,0.35); }
        table { width:100%; border-collapse:collapse; color:white; }
        th, td { padding:12px; border-bottom:1px solid rgba(212,175,55,0.15); text-align:left; font-size:14px; }
        th { color:#d4af37; font-weight:700; }
        .total { text-align:right; font-size:18px; font-weight:800; margin-top:12px; color:#d4af37; }
        .btn { display:inline-block; padding:10px 16px; border-radius:10px; text-decoration:none; font-weight:700; font-size:13px; border:1px solid rgba(212,175,55,0.35); transition:all 0.2s ease; }
        .btn-primary { background:linear-gradient(135deg,#d4af37 0%,#b8860b 100%); color:#0b0b0b; }
        .btn-secondary { background:rgba(255,255,255,0.05); color:white; }
        .btn:hover { transform:translateY(-1px); box-shadow:0 8px 18px rgba(212,175,55,0.25); }
        .empty { text-align:center; padding:40px 0; color:rgba(255,255,255,0.65); }
        .actions { display:flex; gap:10px; margin-top:16px; flex-wrap:wrap; }
    </style>
    @functions {
        double ApplyTaille(double prix, string? taille)
        {
            var t = (taille ?? "").Trim().ToLowerInvariant();
            return t switch
            {
                "75ml" => prix * 0.8,
                "200ml" => prix * 2.0,
                _ => prix
            };
        }
    }
    @Html.AntiForgeryToken()
</head>
<body>
    <div class="wrap">
        <div class="header">
            <h1>Mon Panier</h1>
            <a class="back" href="@Url.Action("Index","Boutique")">← Continuer mes achats</a>
        </div>
        <div class="card">
            @if (Model != null && Model.Any())
            {
                <table>
                    <thead>
                        <tr>
                            <th>Parfum</th>
                            <th>Qté</th>
                            <th>Taille</th>
                            <th>Prix</th>
                            <th>Sous-total</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nom</td>
                                <td>
                                    <input form="upd-@item.ParfumId" type="number" name="qty" value="@item.Quantite" min="1" style="width:70px; padding:6px; border-radius:8px; border:1px solid rgba(212,175,55,0.25); background:rgba(255,255,255,0.04); color:white;" />
                                </td>
                                <td>
                                    <select form="upd-@item.ParfumId" name="taille" style="padding:6px; border-radius:8px; border:1px solid rgba(212,175,55,0.25); background:rgba(255,255,255,0.04); color:white;">
                                        <option value="75ml" @(item.Taille=="75ml" ? "selected" : "")>75ml</option>
                                        <option value="100ml" @(string.IsNullOrEmpty(item.Taille) || item.Taille=="100ml" ? "selected" : "")>100ml</option>
                                        <option value="200ml" @(item.Taille=="200ml" ? "selected" : "")>200ml</option>
                                    </select>
                                </td>
                                @{
                                    var unit = ApplyTaille(item.Prix, item.Taille);
                                    var sub = unit * item.Quantite;
                                }
                                <td>@unit.ToString("F2") €</td>
                                <td>@sub.ToString("F2") €</td>
                                <td>
                                    <form id="upd-@item.ParfumId" method="post" action="@Url.Action("Update","Cart")" style="margin:0;">
                                        <input type="hidden" name="id" value="@item.ParfumId" />
                                        <button class="btn btn-secondary" type="submit" style="padding:6px 10px;">Mettre à jour</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="total">Total : @(((double)ViewBag.Total).ToString("F2")) €</div>
                <div class="actions">
                    <form method="post" action="@Url.Action("Clear","Cart")">
                        <button class="btn btn-secondary" type="submit">Vider le panier</button>
                    </form>
                    <a class="btn btn-primary" href="@Url.Action("Index","Boutique")">Continuer mes achats</a>
                    <a class="btn btn-secondary" href="@Url.Action("Payment","Cart")">Finaliser ma commande</a>
                </div>
            }
            else
            {
                <div class="empty">Votre panier est vide. Explorez la boutique pour ajouter des parfums.</div>
                <a class="btn btn-primary" href="@Url.Action("Index","Boutique")">Aller à la boutique</a>
            }
        </div>
    </div>
</body>
</html>

