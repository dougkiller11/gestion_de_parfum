@model Gestion_de_parfum.Models.Parfum
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>Admin - Modifier</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body{font-family:'Inter',sans-serif;background:#050505;color:white;margin:0;}
        .wrap{max-width:800px;margin:0 auto;padding:30px 20px 50px;}
        h1{margin:0 0 16px;font-size:24px;font-weight:800;color:#d4af37;}
        .form {background:rgba(12,12,12,0.92);border:1px solid rgba(212,175,55,0.2);border-radius:12px;padding:20px;}
        .form-group{margin-bottom:14px;}
        label{display:block;font-size:13px;margin-bottom:6px;color:#d4af37;}
        input, textarea, select{width:100%;padding:10px;border-radius:10px;border:1px solid rgba(212,175,55,0.3);background:rgba(255,255,255,0.04);color:white;font-size:13px;}
        textarea{min-height:90px;}
        .btn{padding:10px 14px;border-radius:10px;border:1px solid rgba(212,175,55,0.35);text-decoration:none;font-weight:700;font-size:13px;background:linear-gradient(135deg,#d4af37,#b8860b);color:#050505;cursor:pointer;}
        .btn-secondary{background:rgba(255,255,255,0.08);color:white;}
        .validation{color:#f87171;font-size:12px;}
    </style>
</head>
<body>
<div class="wrap">
    <h1>Modifier le produit</h1>
    <div class="form">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="validation"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label>Nom</label>
                <input asp-for="Nom" required />
                <span asp-validation-for="Nom" class="validation"></span>
            </div>
            <div class="form-group">
                <label>Marque</label>
                <input asp-for="Marque" />
            </div>
            <div class="form-group">
                <label>Prix (€)</label>
                <input asp-for="Prix" type="number" step="0.01" required />
                <span asp-validation-for="Prix" class="validation"></span>
            </div>
            <div class="form-group">
                <label>Stock</label>
                <input asp-for="Stock" type="number" required />
                <span asp-validation-for="Stock" class="validation"></span>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea asp-for="Description"></textarea>
            </div>
            <div class="form-group">
                <label>Points forts (3 max)</label>
                <input asp-for="PointsFort1" placeholder="Ex: Sillage élégant et longue tenue" />
                <input asp-for="PointsFort2" placeholder="Ex: Accords sophistiqués" style="margin-top:8px;" />
                <input asp-for="PointsFort3" placeholder="Ex: Flacon premium" style="margin-top:8px;" />
            </div>
            <div class="form-group">
                <label>Notes olfactives</label>
                <input asp-for="NoteTete" placeholder="Note de tête" />
                <input asp-for="NoteCoeur" placeholder="Note de cœur" style="margin-top:8px;" />
                <input asp-for="NoteFond" placeholder="Note de fond" style="margin-top:8px;" />
            </div>
            <div class="form-group">
                <label>Catégorie</label>
                <select asp-for="CategorieId" asp-items="ViewBag.CategorieId" required>
                    <option value="">-- Sélectionner --</option>
                </select>
                <span asp-validation-for="CategorieId" class="validation"></span>
            </div>
            <div class="form-group">
                <label>ImageUrl</label>
                <input asp-for="ImageUrl" type="url" />
                <span asp-validation-for="ImageUrl" class="validation"></span>
            </div>
            <button class="btn" type="submit">Enregistrer</button>
            <a class="btn btn-secondary" href="@Url.Action("Index")">Annuler</a>
        </form>
    </div>
</div>
</body>
</html>

