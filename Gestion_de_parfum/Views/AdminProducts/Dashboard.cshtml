@{
    Layout = null;
    var totalProduits = (int)(ViewBag.TotalProduits ?? 0);
    var totalCategories = (int)(ViewBag.TotalCategories ?? 0);
    var stockGlobal = (int)(ViewBag.StockGlobal ?? 0);
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>Admin - Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body{font-family:'Inter',sans-serif;background:#050505;color:white;margin:0;}
        .wrap{max-width:1200px;margin:0 auto;padding:30px 20px 50px;}
        h1{margin:0 0 18px;font-size:26px;font-weight:800;color:#d4af37;}
        .grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:14px;margin-bottom:20px;}
        .card{background:linear-gradient(180deg,rgba(12,12,12,0.92),rgba(6,6,6,0.95));border:1px solid rgba(212,175,55,0.2);border-radius:12px;padding:16px;box-shadow:0 12px 30px rgba(0,0,0,0.35);}
        .label{color:rgba(255,255,255,0.7);font-size:12px;text-transform:uppercase;letter-spacing:1px;margin-bottom:6px;}
        .value{font-size:26px;font-weight:800;color:#d4af37;}
        .header-actions{display:flex;justify-content:space-between;align-items:center;margin-bottom:20px;}
        .actions{display:flex;flex-wrap:wrap;gap:10px;margin-top:20px;}
        .btn{display:inline-block;padding:10px 14px;border-radius:10px;border:1px solid rgba(212,175,55,0.35);text-decoration:none;font-weight:700;font-size:13px;background:linear-gradient(135deg,#d4af37,#b8860b);color:#050505;}
        .btn-secondary{background:rgba(255,255,255,0.08);color:white;}
        .btn-logout{background:rgba(239,68,68,0.15);color:#ef4444;border:1px solid rgba(239,68,68,0.35);}
        .btn-logout:hover{background:rgba(239,68,68,0.25);box-shadow:0 8px 18px rgba(239,68,68,0.25);}
        a.btn:hover{transform:translateY(-1px);box-shadow:0 8px 18px rgba(212,175,55,0.25);}
    </style>
</head>
<body>
<div class="wrap">
    <div class="header-actions">
        <h1>Dashboard Admin</h1>
        <a class="btn btn-logout" href="@Url.Action("Logout", "Account")">Se déconnecter</a>
    </div>
    <div class="grid">
        <div class="card">
            <div class="label">Produits</div>
            <div class="value">@totalProduits</div>
        </div>
        <div class="card">
            <div class="label">Catégories</div>
            <div class="value">@totalCategories</div>
        </div>
        <div class="card">
            <div class="label">Stock total</div>
            <div class="value">@stockGlobal</div>
        </div>
    </div>
    <div class="actions">
        <a class="btn" href="@Url.Action("Create","AdminProducts")">Ajouter un produit</a>
        <a class="btn btn-secondary" href="@Url.Action("Index","AdminProducts")">Gérer les produits</a>
        <a class="btn btn-secondary" href="@Url.Action("Index","Categories1")">Gérer les catégories</a>
        <a class="btn btn-secondary" href="@Url.Action("Index","Utilisateurs1")">Gérer les utilisateurs</a>
        <a class="btn btn-secondary" href="@Url.Action("AdminHistory","Cart")">Gérer l'historique</a>
    </div>
</div>
</body>
</html>

