            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
        }

        .product-card {
            background: linear-gradient(180deg, rgba(18,18,18,0.9) 0%, rgba(8,8,8,0.95) 100%);
