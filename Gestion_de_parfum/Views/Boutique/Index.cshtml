        {
            <div class="products-grid">
                @foreach (var parfum in Model)
                {
                    <div class="product-card">
                        <a href="@Url.Action("Details","Boutique", new { id = parfum.Id })" style="text-decoration:none;color:inherit;">
                            <div class="product-image">
                                <img src="@(string.IsNullOrEmpty(parfum.ImageUrl) ? "https://images.unsplash.com/photo-1506617420156-8e4536971650?auto=format&fit=crop&w=900&q=80" : parfum.ImageUrl)" alt="@parfum.Nom" />
                                @if (parfum.Stock > 0 && parfum.Stock < 10)
                                {
                                    <div class="product-badge">Bient√¥t √©puis√©</div>
                                }
                                else if (parfum.Stock <= 0)
                                {
                                    <div class="product-badge" style="background: rgba(248, 113, 113, 0.8);">√âpuis√©</div>
                                }
                            </div>
                            <div class="product-info">
                                <div class="product-brand">@(parfum.Marque ?? "Essence Luxe")</div>
                                <div class="product-name">@parfum.Nom</div>
                                @if (!string.IsNullOrEmpty(parfum.Description))
                                {
                                    <div class="product-description">@parfum.Description</div>
                                }
                            </div>
                        </a>
                        <div class="product-info" style="padding-top:0;">
                            <div class="product-footer">
                                <div class="product-price-section">
                                    <div class="product-price">@parfum.Prix.ToString("F2") ‚Ç¨</div>
                                    <div class="product-stock @(parfum.Stock > 0 ? "in-stock" : "out-of-stock")">
                                        @if (parfum.Stock > 0)
                                        {
                                            <text>‚úì En stock (@parfum.Stock)</text>
                                        }
                                        else
                                        {
                                            <text>‚úó Rupture de stock</text>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">üîç</div>
                <div class="empty-state-text">Aucun produit trouv√©</div>
                <div class="empty-state-subtext">Essayez de modifier vos filtres de recherche</div>
            </div>
        }
    </div>

    <footer class="footer">
        <div class="brand-foot">
            <div class="logo-icon">‚òÖ</div>
            <div>
                <div class="brand-name" style="font-size:16px;">Essence Luxe</div>
                <p>Parfums signature, √©l√©gance et modernit√©.</p>
            </div>
        </div>
        <div>
            <h4>Navigation</h4>
            <p><a href="@Url.Action("Index","Home")">Accueil</a></p>
            <p><a href="@Url.Action("Index","Boutique")">Boutique</a></p>
            <p><a href="@Url.Action("Register","Account")">Connexion / Inscription</a></p>
        </div>
        <div>
            <h4>Contact</h4>
            <p>support@essenceluxe.com</p>
            <p>+33 1 23 45 67 89</p>
            <p>Paris ¬∑ Luxe ¬∑ Fragrance</p>
        </div>
        <div>
            <h4>Engagement</h4>
            <p>Livraison soign√©e, retours faciles, s√©lection exclusive.</p>
            <p>Notes olfactives raffin√©es, design premium.</p>
        </div>
    </footer>

    <script>
        let cartCount = 0;

        // Auto-submit search on typing (with debounce)
        let searchTimeout;
        const searchInput = document.getElementById('searchInput');
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    document.getElementById('filterForm').submit();
                }, 500);
            });
        }

        function addToCart(parfumId, nom, prix) {
            const btn = event.target;
            const originalText = btn.innerHTML;
            
            // Disable button and show loading
            btn.disabled = true;
            btn.innerHTML = '<span class="loading"></span>';
            
            // Simulate API call
            setTimeout(() => {
                cartCount++;
                document.getElementById('cartCount').textContent = cartCount;
                
                // Show success feedback
                btn.innerHTML = '‚úì Ajout√©';
                btn.style.background = 'linear-gradient(135deg, #4ade80, #22c55e)';
                
