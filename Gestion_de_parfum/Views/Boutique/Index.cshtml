                <div class="category-filters">
                    <button type="submit" 
                            name="categorie" 
                            value="" 
                            class="category-btn @(string.IsNullOrEmpty(ViewBag.SelectedCategorie) ? "active" : "")">
                        Tous
                    </button>
                    @foreach (var cat in ViewBag.Categories as List<Gestion_de_parfum.Models.Categorie> ?? new List<Gestion_de_parfum.Models.Categorie>())
                    {
                        <button type="submit" 
                                name="categorie" 
                                value="@cat.Nom" 
                                class="category-btn @(ViewBag.SelectedCategorie == cat.Nom ? "active" : "")">
                            @cat.Nom
