@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Gestion_de_parfum.Models.Utilisateur
@{
    ViewData["Title"] = "Modifier l'utilisateur";
    ViewBag.HideNav = true;
}

<div class="topbar">
    <h1 class="page-title">Modifier l'utilisateur</h1>
    <a class="btn btn-ghost" asp-action="Index">Retour</a>
</div>

<div class="card">
    <div class="muted" style="margin-bottom:14px;">
        <strong>Informations actuelles</strong><br />
        Nom : @Model.Nom<br />
        Email : @Model.Email<br />
        Mot de passe : ••••••
    </div>
    <form asp-action="Edit" asp-route-id="@Model.Id" asp-controller="Utilisateurs1" method="post">
        @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="form-group">
            <label asp-for="Nom"></label>
            <div style="display:flex; gap:8px; align-items:center;">
                <input asp-for="Nom" value="@Model.Nom" placeholder="Nom complet" />
                <button type="button" class="btn btn-ghost clear-btn" data-target="Nom" style="padding:8px 10px;">Effacer</button>
            </div>
            <span asp-validation-for="Nom" class="field-validation-error"></span>
        </div>

            <div class="form-group">
            <label asp-for="Email"></label>
            <div style="display:flex; gap:8px; align-items:center;">
                <input asp-for="Email" type="email" value="@Model.Email" placeholder="email@domaine.com" />
                <button type="button" class="btn btn-ghost clear-btn" data-target="Email" style="padding:8px 10px;">Effacer</button>
            </div>
            <span asp-validation-for="Email" class="field-validation-error"></span>
            </div>

            <div class="form-group">
            <label asp-for="MotDePasse"></label>
            <div style="display:flex; gap:8px; align-items:center;">
                <input asp-for="MotDePasse" type="password" value="@Model.MotDePasse" placeholder="Mot de passe" />
                <button type="button" class="btn btn-ghost clear-btn" data-target="MotDePasse" style="padding:8px 10px;">Effacer</button>
            </div>
            <span asp-validation-for="MotDePasse" class="field-validation-error"></span>
</div>

        <div class="form-group" style="margin-top:18px;">
            <button type="submit" class="btn btn-gold">Enregistrer</button>
            <a class="btn btn-ghost" asp-action="Index">Annuler</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.querySelectorAll(".clear-btn").forEach(btn => {
            btn.addEventListener("click", () => {
                const name = btn.getAttribute("data-target");
                const input = document.querySelector(`[name="${name}"]`);
                if (input) input.value = "";
            });
        });
    </script>
}
